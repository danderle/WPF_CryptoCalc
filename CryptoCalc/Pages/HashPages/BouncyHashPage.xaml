<local:BasePage x:TypeArguments="core:HashViewModel"  x:Class="CryptoCalc.BouncyHashPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:CryptoCalc"
                xmlns:core="clr-namespace:CryptoCalc.Core;assembly=CryptoCalc.Core"
                mc:Ignorable="d"
                MinWidth="400">

    <Border Style="{StaticResource MainPageBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <!--Header text-->
                <RowDefinition Height="Auto" />
                <!--Hash control-->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--Header text-->
            <TextBlock Text="Bouncy Castle Hash Algorithims" 
                   Style="{StaticResource HeaderText}"/>

            <!--Hash control-->
            <local:HashControl Grid.Row="1"
                           DataContext="{Binding}" />
        </Grid>
    </Border>
</local:BasePage>
