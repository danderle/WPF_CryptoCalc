<local:BasePage x:TypeArguments="core:AsymmetricViewModel"  
                x:Class="CryptoCalc.BouncyPkKeyExchangePage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:CryptoCalc"
                xmlns:core="clr-namespace:CryptoCalc.Core;assembly=CryptoCalc.Core"
                mc:Ignorable="d">

    <Border Background="{StaticResource WhiteBrush}"
            Padding="5">
        <StackPanel>
            <TextBlock Text="MSDN Public Key Exchange"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />
            <local:AsymmetricSetupControl DataContext="{Binding}"/>
            <local:DeriveKeyControl DataContext="{Binding}" />
        </StackPanel>
    </Border>
</local:BasePage>
