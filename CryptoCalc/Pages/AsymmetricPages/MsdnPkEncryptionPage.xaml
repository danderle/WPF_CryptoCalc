<local:BasePage x:TypeArguments="core:AsymmetricViewModel"  
                x:Class="CryptoCalc.MsdnPkEncryptionPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:CryptoCalc"
                xmlns:core="clr-namespace:CryptoCalc.Core;assembly=CryptoCalc.Core"
                mc:Ignorable="d">

    <Border Style="{StaticResource MainPageBorder}"
            d:DataContext="{x:Static core:AsymmetricEncryptionDesignModel.Instance}">
        <Grid>
            <Grid.RowDefinitions>
                <!--setup control-->
                <RowDefinition Height="Auto" />
                <!--Encryption control-->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--Page title-->
            <TextBlock Text="MSDN Public Key Encryption"
                    Style="{StaticResource HeaderText}"/>

            <!--Encryption control-->
            <local:AsymmetricEncryptionControl Grid.Row="1"
                                               DataContext="{Binding}" />
        </Grid>
    </Border>
</local:BasePage>
